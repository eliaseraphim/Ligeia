<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="100"

    android:background="@color/ligeia1Primary">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/ligeia_default_ac_100"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="85"

        android:text="@string/text_current_song"

        android:fontFamily="@font/major_mono"
        android:textSize="16sp"

        android:gravity="center"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"

        android:src="@drawable/queue1"

        android:padding="8dp"

        android:background="@color/colorTransparent"
        android:scaleType="fitCenter"

        android:tint="@color/ligeia1Icons"/>

</LinearLayout>